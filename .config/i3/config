# Multimedia Keys
# increase volume
bindsym XF86AudioRaiseVolume exec "amixer sset Master 5%+ && killall -USR1 i3status"
# decrease volume
bindsym XF86AudioLowerVolume exec "amixer sset Master 5%- && killall -USR1 i3status"
# mute volume
bindsym XF86AudioMute exec "amixer sset Master mute && killall -USR1 i3status"
# pause / play / next / previous
bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

# Enviar profile basico
bindsym $mod+p exec ~/utils/profile.sh

